<Page
    x:Class="ProgressCircleGradientUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:brushes="using:ProgressCircleGradient.Brushes"
    xmlns:controls="using:ProgressCircleGradient.Controls.ProgressCircle"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ProgressCircleGradientUWP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:progressbar="using:ProgressCircleGradient.Controls.ProgressBar"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <StackPanel
        Padding="10"
        VerticalAlignment="Top"
        Orientation="Vertical"
        Spacing="28">

        <!--  Phần 1: Border với ConicGradientBrush  -->
        <StackPanel
            Margin="0,0,0,10"
            HorizontalAlignment="Center"
            Orientation="Vertical"
            Spacing="10">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="20"
                FontWeight="Bold"
                Text="ConicGradientBrush" />
            <StackPanel
                HorizontalAlignment="Center"
                Orientation="Horizontal"
                Spacing="20">
                <Border
                    Width="160"
                    Height="160"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    CornerRadius="14">
                    <Border.Background>
                        <brushes:ConicGradientBrush />
                    </Border.Background>
                </Border>
                <Image
                    Width="160"
                    Height="160"
                    Source="/Brushes/Rectangle 1297.png" />
            </StackPanel>

        </StackPanel>

        <!--  Phần 2: Grid 2 cột cho ProgressBar và ProgressCircle  -->
    </StackPanel>
</Page>
